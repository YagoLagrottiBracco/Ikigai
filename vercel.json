{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "builds": [
        {
            "src": "apps/web/package.json",
            "use": "@vercel/next"
        }
    ],
    "installCommand": "npm install && npm run build:shared",
    "buildCommand": "cd apps/web && npm run build",
    "outputDirectory": "apps/web/.next",
    "framework": "nextjs",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://florir-api.onrender.com/api/:path*"
        }
    ]
}